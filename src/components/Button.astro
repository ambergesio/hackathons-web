---
export interface Props {
	href: string
  variant?: 'primary' | 'secondary'
}

const BUTTON_COLORS = {
	primary: 'text-white bg-gray-900 hover:bg-black hover:text-white',
	secondary: 'text-gray-600 bg-gray-100 hover:bg-gray-200 hover:text-black'
}

const DEFAULT_CLASSES = 'inline-block w-full px-5 py-3 mb-3 mr-1 text-xl font-semibold no-underline align-middle border border-solid rounded-full cursor-pointer select-none sm:mb-0 sm:w-auto hover:scale-110 transition-all'

const { variant = 'primary', href = '#' } = Astro.props as Props
const classes = BUTTON_COLORS[variant] || BUTTON_COLORS.primary
---

<a href={href} class={`${DEFAULT_CLASSES} ${classes}`}>
	<slot></slot>
</a>
